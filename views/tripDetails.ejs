<div class="bg-gray-900 text-gray-200">
  <main class="w-full max-w-4xl mx-auto mt-8 px-4">
    <h1 class="text-4xl font-bold text-green-400 mb-6">Trip Information</h1>

    <!-- Trip Title -->
    <section class="mb-6">
      <h2 class="text-2xl font-semibold text-blue-400 mb-2">Trip Title:</h2>
      <p class="text-lg font-medium"><%= trip.tripTitle %></p>
    </section>

    <!-- Trip Date -->
    <section class="mb-6">
      <h2 class="text-2xl font-semibold text-blue-400 mb-2">Date:</h2>
      <% 
        const formattedDate = new Intl.DateTimeFormat('en-GB', { 
          year: 'numeric', 
          month: '2-digit', 
          day: '2-digit' 
        }).format(new Date(trip.date));
      %>
      <p class="text-lg font-medium"><%= formattedDate %></p>
    </section>

    <!-- Expenses -->
    <section class="mb-6">
      <h2 class="text-2xl font-semibold text-blue-400 mb-2">Expenses:</h2>
      <% if (trip.expenses.length > 0) { %>
      <ul class="list-disc pl-5">
        <% trip.expenses.forEach(expense => { %>
        <li class="text-lg font-medium">
          <span class="font-semibold text-green-400"><%= expense.title %>:</span> ₹<%= expense.amount %>
        </li>
        <% }) %>
      </ul>
      <% } else { %>
      <p class="text-gray-400">No expenses added yet.</p>
      <% } %>
    </section>

    <!-- Participants -->
    <section class="mb-6">
      <h2 class="text-2xl font-semibold text-blue-400 mb-2">Participants:</h2>
      <% if (trip.participants.length > 0) { %>
      <ul class="list-disc pl-5">
        <% trip.participants.forEach(participant => { %>
        <li class="text-lg font-medium">
          <span class="font-semibold text-green-400"><%= participant.email %>:</span> ₹<%= participant.amount %>
        </li>
        <% }) %>
      </ul>
      <% } else { %>
      <p class="text-gray-400">No participants added yet.</p>
      <% } %>
    </section>

    <!-- Created At -->
    <section class="mb-6">
      <h2 class="text-2xl font-semibold text-blue-400 mb-2">Created At:</h2>
      <% 
        const formattedCreatedAt = new Intl.DateTimeFormat('en-GB', { 
          year: 'numeric', 
          month: '2-digit', 
          day: '2-digit' 
        }).format(new Date(trip.createdAt));
      %>
      <p class="text-lg font-medium"><%= formattedCreatedAt %></p>
    </section>
  </main>
</div>