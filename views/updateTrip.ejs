<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Trip</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-3xl">
    <h1 class="text-2xl font-bold mb-6 text-center">Update Trip</h1>
    <form action="/trip/updateTrip/<%= trip._id %>" method="POST">
      <!-- Trip Title -->
      <div class="mb-4">
        <label for="tripTitle" class="block text-gray-700 font-medium mb-2">Trip Title</label>
        <input 
          type="text" 
          id="tripTitle" 
          name="tripTitle" 
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" 
          value="<%= trip.tripTitle %>" 
          required>
      </div>

      <!-- Expenses -->
      <div class="mb-6">
        <label for="expenses" class="block text-gray-700 font-medium mb-2">Expenses</label>
        <div id="expenses-container">
          <% trip.expenses.forEach((expense, index) => { %>
            <div class="flex items-center gap-4 mb-2">
              <input 
                type="text" 
                name="expenses[<%= index %>][title]" 
                placeholder="Expense Title" 
                class="flex-1 px-4 py-2 border rounded-lg focus:outline-none" 
                value="<%= expense.title %>" 
                required>
              <input 
                type="number" 
                name="expenses[<%= index %>][amount]" 
                placeholder="Amount" 
                class="w-1/4 px-4 py-2 border rounded-lg focus:outline-none" 
                value="<%= expense.amount %>" 
                required>
              <input 
                type="date" 
                name="expenses[<%= index %>][date]" 
                class="w-1/4 px-4 py-2 border rounded-lg focus:outline-none" 
                value="<%= expense.date.toISOString().substring(0, 10) %>">
            </div>
          <% }) %>
        </div>
      </div>

      <!-- Participants -->
      <div class="mb-6">
        <label for="participants" class="block text-gray-700 font-medium mb-2">Participants</label>
        <div id="participants-container">
          <% trip.participants.forEach((participant, index) => { %>
            <div class="flex items-center gap-4 mb-2">
              <input 
                type="email" 
                name="participants[<%= index %>][email]" 
                placeholder="Participant Email" 
                class="flex-1 px-4 py-2 border rounded-lg focus:outline-none" 
                value="<%= participant.email %>" 
                required>
              <input 
                type="number" 
                name="participants[<%= index %>][amount]" 
                placeholder="Amount Contributed" 
                class="w-1/3 px-4 py-2 border rounded-lg focus:outline-none" 
                value="<%= participant.amount %>" 
                required>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button 
          type="submit" 
          class="px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition">
          Update Trip
        </button>
      </div>
    </form>
  </div>
</body>
</html>
